<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white"
    tools:context="com.kaoba.expocr.activities.TimeLineActivity">

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="665dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_menu_camera" />

        <LinearLayout
            android:layout_width="299dp"
            android:layout_height="132dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/postborder"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="69dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/textViewTLUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/caldroid_black"
                    android:textSize="18sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/PosteditText"
                android:layout_width="203dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/caldroid_black"
                tools:layout_editor_absoluteX="354dp"
                tools:layout_editor_absoluteY="216dp"
                android:layout_weight="0.77" />

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@color/caldroid_white"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.24"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_menu_camera" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_menu_camera" />

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="0.54"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/btnPublish"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:background="@color/pinkexpo"
                android:text="Publish"
                tools:layout_editor_absoluteX="344dp"
                tools:layout_editor_absoluteY="621dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/timeLineListView"
            android:layout_width="315dp"
            android:layout_height="458dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/caldroid_white"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="150dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
