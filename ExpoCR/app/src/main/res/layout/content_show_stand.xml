<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kaoba.expocr.activities.ShowStandActivity"
    tools:showIn="@layout/activity_show_stand">

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="594dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgrobertstand"
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_gallery"
            android:layout_weight="0.29" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="You can get more info by visiting a stand"
            android:textAlignment="center"
            android:textColor="@color/caldroid_black"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/showStandList"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:background="@android:color/holo_blue_bright"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
